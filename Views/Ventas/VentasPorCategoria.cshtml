@model IEnumerable<TiendaVentas.Models.Producto>

@{
    ViewData["Title"] = "Productos Vendidos por Categoría (2019)";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-4">
                <i class="fas fa-filter"></i> Productos Vendidos por Categoría - Año 2019
            </h2>
        </div>
    </div>

    <!-- Botón de regreso -->
    <div class="row mb-3">
        <div class="col-12">
            <a href="@Url.Action("Index", "Ventas")" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Volver al Menú Principal
            </a>
        </div>
    </div>

    <!-- Filtro por categoría -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-filter"></i> Filtrar por Categoría</h5>
                </div>
                <div class="card-body">
                    <form method="get" asp-action="VentasPorCategoria">
                        <div class="row align-items-end">
                            <div class="col-md-8">
                                <label for="categoriaId" class="form-label">Seleccionar Categoría:</label>
                                <select name="categoriaId" id="categoriaId" class="form-select">
                                    <option value="">-- Seleccionar Categoría --</option>
                                    @foreach (var categoria in ViewBag.Categorias as List<SelectListItem>)
                                    {
                                        <option value="@categoria.Value" selected="@categoria.Selected">
                                            @categoria.Text
                                        </option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-search"></i> Filtrar
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Resultados -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-box"></i>
                        @if (!string.IsNullOrEmpty(ViewBag.CategoriaSeleccionada as string))
                        {
                            <span>Productos de la Categoría: <strong>@ViewBag.CategoriaSeleccionada</strong></span>
                            <span class="badge bg-light text-dark ms-2">@Model.Count() productos encontrados</span>
                        }
                        else
                        {
                            <span>Selecciona una categoría para ver los productos vendidos en 2019</span>
                        }
                    </h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover align-middle">
                                <thead class="table-dark text-center">
                                    <tr>
                                        <th>Código</th>
                                        <th>Nombre del Producto</th>
                                        <th>Categoría</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var producto in Model)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                <span class="badge bg-secondary">@producto.CodigoProducto</span>
                                            </td>
                                            <td>
                                                <i class="fas fa-box text-muted"></i>
                                                <strong>@producto.Nombre</strong>
                                            </td>
                                            <td class="text-center">
                                                <span class="badge bg-primary">@producto.Categoria.Nombre</span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        @if (!string.IsNullOrEmpty(ViewBag.CategoriaSeleccionada as string))
                        {
                            <div class="alert alert-warning text-center">
                                <i class="fas fa-exclamation-triangle"></i>
                                <h5>No se encontraron productos</h5>
                                <p>No hay productos vendidos en la categoría <strong>@ViewBag.CategoriaSeleccionada</strong> durante el año 2019.</p>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info text-center">
                                <i class="fas fa-info-circle"></i>
                                <h5>¡Selecciona una categoría!</h5>
                                <p>Usa el filtro de arriba para ver los productos vendidos en 2019 por categoría específica.</p>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>